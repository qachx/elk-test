{
  "index_patterns": ["banking-logs-*"],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "index.refresh_interval": "5s"
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "timestamp": {
          "type": "date"
        },
        "service": {
          "type": "keyword"
        },
        "level": {
          "type": "keyword"
        },
        "event_type": {
          "type": "keyword"
        },
        "message": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "user_id": {
          "type": "keyword"
        },
        "username": {
          "type": "keyword"
        },
        "client_ip": {
          "type": "ip"
        },
        "amount": {
          "type": "float"
        },
        "currency": {
          "type": "keyword"
        },
        "transaction_id": {
          "type": "keyword"
        },
        "sender_account": {
          "type": "keyword"
        },
        "recipient_account": {
          "type": "keyword"
        },
        "risk_score": {
          "type": "integer"
        },
        "account_locked": {
          "type": "boolean"
        },
        "failed_attempts": {
          "type": "integer"
        },
        "lock_duration": {
          "type": "integer"
        },
        "night_transaction": {
          "type": "boolean"
        },
        "notification_type": {
          "type": "keyword"
        },
        "notification_status": {
          "type": "keyword"
        },
        "tags": {
          "type": "keyword"
        },
        "log_format": {
          "type": "keyword"
        },
        "index_suffix": {
          "type": "keyword"
        },
        "geoip": {
          "properties": {
            "location": {
              "type": "geo_point"
            },
            "country_name": {
              "type": "keyword"
            },
            "city_name": {
              "type": "keyword"
            },
            "continent_code": {
              "type": "keyword"
            }
          }
        }
      }
    }
  }
} 